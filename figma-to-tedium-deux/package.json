{
  "name": "figma-to-tedium-deux",
  "version": "1.0.0",
  "description": "Refactored Figma to HTML/Tedium plugin with modular architecture",
  "main": "dist/code.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:refactored": "webpack --config webpack-refactored.config.js --mode=production",
    "build:simple": "webpack --config webpack-simple.config.js --mode=production",
    "dev": "webpack --mode=development --watch",
    "dev:refactored": "webpack --config webpack-refactored.config.js --mode=development --watch",
    "dev:simple": "webpack --config webpack-simple.config.js --mode=development --watch",
    "build:css": "node scripts/build-css.js",
    "build:all": "node scripts/build-all.js",
    "verify": "node scripts/verify-plugin.js",
    "dev:cli": "ts-node --project tsconfig.cli.json scripts/dev-cli.ts",
    "dev:cli:build": "tsc --project tsconfig.cli.json && node dist-cli/scripts/dev-cli.js",
    "export-node": "ts-node --project tsconfig.cli.json scripts/export-specific-node.ts",
    "test-simple-animation": "ts-node --project tsconfig.cli.json scripts/test-simple-animation-export.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "figma",
    "plugin",
    "html",
    "tedium",
    "refactored"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "@types/node": "^24.2.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4"
  }
}
